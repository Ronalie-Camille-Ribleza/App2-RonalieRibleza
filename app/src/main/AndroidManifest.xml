<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="app.com.q15">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="CookingJoy"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.CookingUtilityApp"
        tools:targetApi="31">

        <activity
            android:name="com.example.cookingutilityapp.AppSplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.cookingutilityapp.MainActivity"
            android:exported="true" />
        <activity android:name="com.example.cookingutilityapp.Ingredients"/>
        <activity android:name="com.example.cookingutilityapp.Equipment"/>
        <activity android:name="com.example.cookingutilityapp.Timer"/>
    </application>
</manifest>